students = []

while True:
    print("\n1.Add  2.View  3.Search  4.Delete  5.Exit")
    ch = input("Enter choice: ")

    if ch == "1":
        name = input("sana123")
     roll = input("Roll: ")
        marks = input("Marks: ")
        students.append({"name": name, "roll": roll, "marks": marks})
        print("âœ… Student added!")

    elif ch == "2":
        if not students:
            print("No students yet.")
        else:
            for s in students:
                print(f"{s['roll']} - {s['name']} : {s['marks']}")

    elif ch == "3":
        r = input("Enter roll: ")
        found = False
        for s in students:
            if s['roll'] == r:
                print(f"Found: {s['name']} - {s['marks']}")
                found = True
        if not found:
            print("âŒ Not found.")

    elif ch == "4":
        r = input("Enter roll to delete: ")
        students = [s for s in students if s['roll'] != r]
        print("âœ… Deleted if existed.")

    elif ch == "5":
        print("ğŸ‘‹ Exiting...")
        break
    else:
        print("Invalid choice.")
